extends layout
block prepend head 
  meta(name="Error" content="Something went wrong")
block append head
  link(href="/stylesheets/error.css", rel="stylesheet")
block content
  include ./partials/standard-nav
  section.block
    //- TODO: Revamp for percentage styling.
    .row
      .large-12.large-centered.columns(style="text-align:center")
        h2 Something went wrong with that request :(
    .row(style="margin-bottom:20px;")
      .large-12.small-centered.columns(style="text-align:center")
        h4 Sorry about that. Need help? Email support@technical.io.

    .row
      .large-12.large-center.columns(style="text-align:center;height:550px")
        video(src="https://s3.amazonaws.com/technicalmachine-assets/launch/gifs/Servos.hash-8be70a0f.mp4" height="300" type="video/mp4" autoplay loop)
